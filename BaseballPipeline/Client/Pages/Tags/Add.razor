@page "/tags/add"
@using BaseballPipeline.Shared.Models
@inject HttpClient Http
@inject NavigationManager Navigation
<h3>Add Tag</h3>
<Form tag="@tag" OnValidSubmit="@CreateTag" OnCancel="Cancel"  />
@code {
    TagModel tag = new TagModel();
    async Task CreateTag()
    {
        await Http.PostAsJsonAsync("Tag", tag);
        Navigation.NavigateTo("tags");
    }
    void Cancel()
    {
        Navigation.NavigateTo("tags");
    }
}
